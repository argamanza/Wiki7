{
    "name": "Wiki7Skin",
    "version": "1.0.0",
    "author": "Your Name",
    "url": "Your Project URL",
    "descriptionmsg": "wiki7skin-desc",
    "namemsg": "skinname-wiki7skin",
    "license-name": "GPL-2.0-or-later",
    "type": "skin",
    "requires": {
        "MediaWiki": ">= 1.43.0"
    },
    "ValidSkinNames": {
        "wiki7skin": {
            "class": "SkinMustache",
            "args": [
                {
                    "name": "wiki7skin",
                    "responsive": true,
                    "templateDirectory": "templates",
                    "styles": [
                        "mediawiki.skin.variables",
                        "skins.wiki7skin.styles"
                    ],
                    "scripts": [
                        "skins.wiki7skin.js"
                    ]
                }
            ]
        }
    },
    "MessagesDirs": {
        "Wiki7Skin": [
            "i18n"
        ]
    },
    "ResourceModules": {
        "skins.wiki7skin.styles": {
            "class": "MediaWiki\\ResourceLoader\\SkinModule",
            "features": {
                "normalize": true,
                "elements": true,
                "content-tables": true,
                "content-links": true,
                "content-media": true,
                "content-thumbnails": true,
                "interface-message-box": true,
                "interface-category": true,
                "toc": true
            },
            "targets": [
                "desktop",
                "mobile"
            ],
            "styles": [
                "resources/styles/Wiki7Skin.less"
            ]
        },
        "skins.wiki7skin.js": {
            "targets": [
                "desktop",
                "mobile"
            ],
            "scripts": [
                "resources/scripts/main.js"
            ],
            "dependencies": [
                "mediawiki.util"
            ]
        }
    },
    "ResourceFileModulePaths": {
        "localBasePath": "",
        "remoteSkinPath": "Wiki7Skin"
    },
    "AutoloadClasses": {
        "SkinWiki7Skin": "Wiki7Skin.php"
    },
    "manifest_version": 2
}